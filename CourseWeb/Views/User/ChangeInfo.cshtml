@model CourseWeb.Models.UserChgInfoViewModel
@{
    ViewData["Title"] = "ChangeInfo";
}

<style>
    .member-container {
        max-width: 600px;
        margin: 3rem auto;
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    }

    .member-card {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        background: #fff;
    }

    .member-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
        padding: 2rem;
        text-align: center;
    }

        .member-header h2 {
            margin: 0;
            font-size: 1.8rem;
        }

        .member-header p {
            margin: 0.5rem 0 0;
            font-size: 0.95rem;
            opacity: 0.85;
        }

    .member-body {
        padding: 2rem;
    }

    .form-group-modern {
        margin-bottom: 1.5rem;
        position: relative;
    }

    .form-label-modern {
        display: flex;
        align-items: center;
        font-weight: 600;
        color: #333;
        margin-bottom: 0.5rem;
    }

        .form-label-modern i {
            margin-right: 0.5rem;
            color: #667eea;
            font-size: 1.1rem;
        }

    .form-control-modern {
        width: 100%;
        padding: 0.7rem 1rem;
        border-radius: 10px;
        border: 1.5px solid #ddd;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

        .form-control-modern:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.15);
        }

    .btn-save {
        width: 100%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: #fff;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        padding: 0.8rem 0;
        border-radius: 25px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(102,126,234,0.4);
        }

    .alert-modern {
        border-radius: 12px;
        padding: 1rem 1.5rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 500;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .alert-success-modern {
        background: #d4edda;
        color: #155724;
    }

    .alert-warning-modern {
        background: #fff3cd;
        color: #856404;
    }

</style>

<div class="member-container">
    <div class="member-card">
        <div class="member-header">
            <h2>👤 會員資料修改</h2>
            <p>更新您的個人資訊</p>
        </div>
        <div class="member-body">
            @if (ViewBag.Result != null)
            {
                <div class="alert-modern alert-success-modern">
                    <i class="bi bi-check-circle-fill"></i>
                    @ViewBag.Result
                </div>
            }

            <form asp-action="ChangeInfo" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group-modern">
                    <label class="form-label-modern">
                        <i class="bi bi-person-fill"></i>
                        姓名
                    </label>
                    <input type="text" asp-for="Name" class="form-control-modern" placeholder="請輸入您的姓名" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group-modern">
                    <label class="form-label-modern">
                        <i class="bi bi-phone-fill"></i>
                        手機號碼
                    </label>
                    <input type="tel" asp-for="Mobile" class="form-control-modern" placeholder="請輸入您的手機號碼" required />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>

                <div class="form-group-modern">
                    <button type="submit" class="btn-save">
                        <i class="bi bi-save"></i> 儲存變更
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
