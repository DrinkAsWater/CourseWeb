@model CourseWeb.Models.ChangePwdViewModel
@{
    ViewData["Title"] = "ChangePwd";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center mb-4">變更密碼</h3>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <form asp-action="ChangePwd" method="post">

                        <!-- 原始密碼 -->
                        <div class="mb-3">
                            <label asp-for="OldPassword" class="form-label"></label>
                            <input asp-for="OldPassword"
                                   class="form-control"
                                   placeholder="請輸入原始密碼" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>

                        <!-- 新密碼 -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password"
                                   class="form-control"
                                   placeholder="請輸入新密碼" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <!-- 確認新密碼 -->
                        <div class="mb-3">
                            <label asp-for="ConfirmPwd" class="form-label"></label>
                            <input asp-for="ConfirmPwd"
                                   class="form-control"
                                   placeholder="請再次輸入新密碼" />
                            <span asp-validation-for="ConfirmPwd" class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-success">
                                變更密碼
                            </button>
                        </div>
                    </form>

                    <div class="text-center">
                        <a asp-controller="User" asp-action="Login">返回登入頁</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
