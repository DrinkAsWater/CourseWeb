@model UserRegisterViewModel

@{
    ViewData["Title"] = "UserRegister";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center mb-4">會員註冊</h3>
                    <div asp-validation-summary="All"></div>

                    <form asp-action="RegisterUser" method="post">

                        <!-- 使用者名稱 -->
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username"
                                   class="form-control"
                                   placeholder="請輸入使用者名稱" />
                            <span asp-validation-for="Username"
                                  class="text-danger"></span>
                        </div>

                        <!-- 電子郵件 -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email"
                                   class="form-control"
                                   placeholder="請輸入電子郵件" />
                            <span asp-validation-for="Email"
                                  class="text-danger"></span>
                        </div>

                        <!-- 密碼 -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password"
                                   class="form-control"
                                   placeholder="請輸入密碼" />
                            <span asp-validation-for="Password"
                                  class="text-danger"></span>
                        </div>

                        <!-- 確認密碼 -->
                        <div class="mb-3">
                            <label asp-for="ConfirmPwd" class="form-label"></label>
                            <input asp-for="ConfirmPwd"
                                   class="form-control"
                                   placeholder="請再次輸入密碼" />
                            <span asp-validation-for="ConfirmPwd"
                                  class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-success">
                                註冊
                            </button>
                        </div>
                    </form>

                    <div class="text-center">
                        <span>已經有帳號？</span>
                        <a asp-controller="User"
                           asp-action="Login">
                            返回登入
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
